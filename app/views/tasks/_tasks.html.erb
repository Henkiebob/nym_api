  <% tasks.each do |task| %>
      <%= task.name %>

      <% task.users.each do |user| %>
          <%= user.name %>
          <%= image_tag user.avatar.url(:thumb) %>
      <% end %>

      <% if open == 1 %>
          <%= button_to 'Meedoen', add_user_to_task_path(:task_id => task.id), :method => :post %>
      <% else %>
          <%= button_to 'Niet meer meedoen', remove_user_from_task_path(:task_id => task.id), :method => :delete %>
      <% end %>
  <% end %>
