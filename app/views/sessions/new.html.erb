
  <h1>Log in</h1>
  <%= form_tag sessions_path do %>
    <div class="field">
      <%= label_tag :name %>
      <%= text_field_tag :name, params[:name] %>
    </div>
    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <p><%= link_to "Forgot your password?", new_password_reset_path %></p></br>
    <p><%= link_to "Registeren", new_house_path %></p></br>

    <div class="actions"><%= submit_tag "Log in" %></div>
  <% end %>
  </div>
